{
  "name": "@pompom/react",
  "version": "0.0.1",
  "description": "Create typesafe design systems with powerful inline styles",
  "author": "Manan Tank",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.js",
      "types": "./types/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts",
    "lint": "tsc"
  },
  "keywords": [
    "react",
    "css",
    "design-system",
    "css-in-js"
  ],
  "devDependencies": {
    "@types/react": "^18",
    "tsup": "^8.0.2",
    "typescript": "^5"
  },
  "peerDependencies": {
    "@types/react": ">=16"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MananTank/pompom.git",
    "directory": "packages/react"
  }
}